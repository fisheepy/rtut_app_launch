[Unit]
Description=Kid Voice Bot Service
After=network-online.target sound.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/opt/pi_kid_voice_bot
EnvironmentFile=/opt/pi_kid_voice_bot/.env
ExecStart=/opt/pi_kid_voice_bot/.venv/bin/python -m src.main
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
